// Prisma schema for Supabase PostgreSQL
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  username   String   @unique
  customerId String?  @unique @map("customer_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  // Subscription fields
  isPaidUser         Boolean            @default(false) @map("is_paid_user")
  subscriptionStatus SubscriptionStatus @default(NONE) @map("subscription_status")
  subscriptionId     String?            @unique @map("subscription_id")
  trialEndsAt        DateTime?          @map("trial_ends_at")
  subscriptionEndsAt DateTime?          @map("subscription_ends_at")

  // Relations
  urges    Urge[]
  streak   Streak?
  relapses Relapse[]
  journals Journal[]

  @@map("users")
}

enum SubscriptionStatus {
  NONE       // No subscription
  TRIALING   // In free trial period
  ACTIVE     // Paid and active
  ON_HOLD    // Payment failed, grace period
  CANCELLED  // Cancelled but still active until period ends
  EXPIRED    // Subscription ended
}

model Urge {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      UrgeType @default(RESISTED)
  note      String?
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("urges")
}

model Streak {
  id            String    @id @default(uuid())
  userId        String    @unique @map("user_id")
  currentStreak Int       @default(0) @map("current_streak")
  longestStreak Int       @default(0) @map("longest_streak")
  lastResetAt   DateTime? @map("last_reset_at")
  startedAt     DateTime? @map("started_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("streaks")
}

model Relapse {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  streakDays   Int      @map("streak_days") // How many days the streak was before relapse
  streakStart  DateTime? @map("streak_start") // When the streak started
  note         String?  // Optional note about the relapse
  trigger      String?  // What triggered the relapse (pre-made or custom)
  feeling      String?  @db.VarChar(200) // How they feel now (max 200 chars)
  createdAt    DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("relapses")
}

model Journal {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  content   String   @db.VarChar(500) // Short journal entries, max 500 chars
  createdAt DateTime @default(now()) @map("created_at")

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("journals")
}

enum UrgeType {
  RESISTED
  GAVE_IN
}
